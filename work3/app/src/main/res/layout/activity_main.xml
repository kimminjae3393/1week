<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.work3.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#c182ec3f"
        android:gravity="center"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자기소개"
            android:textSize="20dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="#ee000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#eedfdfdf">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/picture"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="25dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:layout_below="@+id/name"/>
            <TextView
                android:id="@+id/school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학교"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:layout_below="@+id/age"/>
            <TextView
                android:id="@+id/part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지원분야"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:layout_below="@+id/school"/>

            <EditText
                android:id="@+id/editName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="이름을 입력해주세요"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:layout_alignBaseline="@+id/name"
                android:layout_toEndOf="@+id/name" />
            <EditText
                android:id="@+id/editAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="나이를 입력해주세요"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:layout_alignBaseline="@+id/age"
                android:layout_toEndOf="@+id/age" />
            <EditText
                android:id="@+id/editSchool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="학교를 입력해주세요"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:layout_alignBaseline="@+id/school"
                android:layout_toEndOf="@+id/school" />
            <EditText
                android:id="@+id/editPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="지원분야를 입력해주세요"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:layout_alignBaseline="@+id/part"
                android:layout_toEndOf="@+id/part" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3e7dec"
        android:gravity="right"
        android:layout_weight="2"
        >
        <Button
            android:id="@+id/btn_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="클릭"
            android:textSize="15dp"
            android:layout_gravity="right|bottom"/>
    </LinearLayout>

</LinearLayout>

